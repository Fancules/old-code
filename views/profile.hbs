<div class="row">
    {{#if user.avatar}}
        <div class="col s6">
            <img class='avatar' src="{{user.avatar}}">
        </div>
    {{else}}
        <p>Please, upload your avatar</p>
    {{/if}}
    <div class="col s6">
        <form style="margin-top: 1.5rem;" action="/profile" method="post" enctype="multipart/form-data">
            <p><strong>Your email: {{user.email}}</strong></p>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Choose your new avatar</span>
                    <input name="avatar" type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <div class="input-field">
            <input name='name' id="name" type="text" class="validate" value="{{user.name}}">
            <label for="name">Your name</label>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit">Change your data</button>
        </form>
    </div>
</div>